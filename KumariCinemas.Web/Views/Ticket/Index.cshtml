@model IEnumerable<KumariCinemas.Web.Models.Show>

@{
    ViewData["Title"] = "Available Shows";
}

<div class="booking-container">
    <header class="page-header">
        <h1>Kumari Cinemas</h1>
        <p>Experience movies like never before</p>
        
        <form method="get" class="filter-form">
            <input type="text" name="search" placeholder="Search movies..." value="@Context.Request.Query["search"]" class="search-input" />
            <select name="genre" class="filter-select">
                <option value="">All Genres</option>
                <option value="Fiction" selected="@(Context.Request.Query["genre"] == "Fiction")">Fiction</option>
                <option value="Action" selected="@(Context.Request.Query["genre"] == "Action")">Action</option>
                <option value="Comedy" selected="@(Context.Request.Query["genre"] == "Comedy")">Comedy</option>
                <option value="Drama" selected="@(Context.Request.Query["genre"] == "Drama")">Drama</option>
                <option value="Horror" selected="@(Context.Request.Query["genre"] == "Horror")">Horror</option>
            </select>
            <input type="date" name="date" value="@Context.Request.Query["date"]" class="filter-select" />
            <button type="submit" class="btn-filter">Filter</button>
            <a href="/Ticket/Index" class="btn-clear">Clear</a>
        </form>
    </header>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <div class="shows-grid">
        @foreach (var show in Model)
        {
            <div class="show-card">
                @if (!string.IsNullOrEmpty(show.Movie.ImageUrl))
                {
                    <div class="movie-poster">
                        <img src="@show.Movie.ImageUrl" alt="@show.Movie.Title" />
                    </div>
                }
                else
                {
                    <div class="movie-poster no-image">
                        <span>ðŸŽ¬</span>
                    </div>
                }
                <div class="show-info">
                    <h3>@show.Movie.Title</h3>
                    <p>@show.Movie.Genre</p>
                    <div class="show-time">
                        <span class="badge bg-primary">@show.ShowDateTime.ToString("MMM dd")</span>
                        <span class="badge bg-secondary">@show.ShowDateTime.ToString("hh:mm tt")</span>
                    </div>
                </div>
                <div class="price-section">
                    <span class="price-label">Price</span>
                    <span class="price-value">Rs. @show.CalculatedPrice</span>
                </div>
                <form asp-action="Book" method="post" class="booking-form" data-show-id="@show.ShowId">
                    <input type="hidden" name="showId" value="@show.ShowId" />
                    <input type="hidden" name="unitPrice" value="@show.CalculatedPrice" class="unit-price" />
                    <input type="hidden" name="quantity" value="0" class="ticket-quantity" />
                    <input type="hidden" name="seats" value="" class="selected-seats-input" />
                    @* Final Price Calculate Server Side for Security *@
                    
                    <button type="button" class="btn-select-seats" onclick="showSeatMap(@show.ShowId, '@show.CalculatedPrice')">
                        Choose Seats (<span class="selected-count">0</span> selected)
                    </button>

                    <button type="submit" class="btn-book" style="margin-top: 15px;" disabled>
                        Book Now (Rs. <span class="display-price">0</span>)
                    </button>
                </form>

                <div class="review-section">
                    <h4>Rate this Movie</h4>
                    <form asp-controller="Review" asp-action="Add" method="post">
                        <input type="hidden" name="movieId" value="@show.MovieId" />
                        @* UserId Injection Removed *@
                        <select name="rating" class="form-control" style="margin-bottom: 5px;">
                            <option value="5">â˜…â˜…â˜…â˜…â˜… (5/5)</option>
                            <option value="4">â˜…â˜…â˜…â˜…â˜† (4/5)</option>
                            <option value="3">â˜…â˜…â˜…â˜†â˜† (3/5)</option>
                            <option value="2">â˜…â˜…â˜†â˜†â˜† (2/5)</option>
                            <option value="1">â˜…â˜†â˜†â˜†â˜† (1/5)</option>
                        </select>
                        <textarea name="comment" class="form-control" placeholder="Write a review..." rows="2"></textarea>
                        <button type="submit" class="btn-review">Submit Review</button>
                    </form>
                </div>
            </div>
        }
    </div>

    <!-- Seat Selection Modal -->
    <div id="seatModal" class="modal" style="display: none;">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Select Your Seats</h2>
                <span class="close-modal" onclick="closeSeatModal()">&times;</span>
            </div>
            <div class="modal-body">
                <div class="screen">SCREEN</div>
                <div id="seatMap" class="seat-map"></div>
                <div class="seat-legend">
                    <div><span class="seat available"></span> Available</div>
                    <div><span class="seat selected"></span> Selected</div>
                    <div><span class="seat booked"></span> Booked</div>
                </div>
                <div class="selection-summary">
                    <p>Selected Seats: <strong id="selectedSeatsList">None</strong></p>
                    <p>Total: Rs. <strong id="totalPrice">0</strong></p>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn-secondary" onclick="closeSeatModal()">Cancel</button>
                <button class="btn-primary" onclick="confirmSeats()">Confirm Selection</button>
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --primary: #e50914;
        --bg-dark: #0a0a0b;
        --card-bg: rgba(255, 255, 255, 0.05);
        --text: #ffffff;
        --text-secondary: #b3b3b3;
    }

    body {
        background-color: var(--bg-dark);
        color: var(--text);
        font-family: 'Outfit', sans-serif;
    }

    .booking-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .page-header {
        text-align: center;
        margin-bottom: 40px;
    }

    .alert-danger {
        background: rgba(229, 9, 20, 0.2);
        color: #ff6b6b;
        border: 1px solid #e50914;
        padding: 15px;
        border-radius: 12px;
        margin-bottom: 30px;
        text-align: center;
        text-align: center;
    }

    .page-header h1 {
        font-size: 3.5rem;
        background: linear-gradient(to right, #ffffff, #808080);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 10px;
    }

    .filter-form {
        display: flex;
        gap: 15px;
        justify-content: center;
        margin-top: 30px;
        flex-wrap: wrap;
    }

    .search-input, .filter-select {
        padding: 12px 20px;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
        border-radius: 8px;
        font-size: 1rem;
    }

    .search-input {
        flex: 1;
        min-width: 250px;
        max-width: 400px;
    }

    .search-input::placeholder {
        color: rgba(255, 255, 255, 0.5);
    }

    .filter-select {
        min-width: 150px;
    }

    .filter-select option {
        background: var(--bg-dark);
    }

    .btn-filter, .btn-clear {
        padding: 12px 24px;
        background: var(--primary);
        border: none;
        color: white;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: opacity 0.3s;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
    }

    .btn-filter:hover {
        opacity: 0.9;
    }

    .btn-clear {
        background: transparent;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .btn-clear:hover {
        background: rgba(255, 255, 255, 0.1);
    }

    .shows-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 30px;
    }

    .show-card {
        background: var(--card-bg);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        padding: 0;
        overflow: hidden;
        transition: transform 0.3s ease, border-color 0.3s ease;
    }

    .show-card:hover {
        transform: translateY(-10px);
        border-color: var(--primary);
    }

    .movie-poster {
        width: 100%;
        height: 300px;
        overflow: hidden;
        background: linear-gradient(135deg, rgba(229, 9, 20, 0.1), rgba(0, 0, 0, 0.3));
    }

    .movie-poster img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .show-card:hover .movie-poster img {
        transform: scale(1.05);
    }

    .movie-poster.no-image {
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 4rem;
    }

    .show-info {
        padding: 20px;
    }

    .genre-tag {
        background: rgba(229, 9, 20, 0.2);
        color: var(--primary);
        padding: 5px 12px;
        border-radius: 50px;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
    }

    .show-card h3 {
        margin: 0 0 10px 0;
        font-size: 1.5rem;
    }

    .show-time, .show-date {
        color: var(--text-secondary);
        margin: 5px 0;
    }

    .price-section {
        margin: 0;
        padding: 20px;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .price-label { color: var(--text-secondary); }
    .price-value { font-size: 1.4rem; font-weight: 700; color: var(--primary); }

    .btn-book {
        width: 100%;
        padding: 15px;
        background: var(--primary);
        color: white;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        cursor: pointer;
        transition: opacity 0.3s ease;
    }

    .btn-book:hover {
        opacity: 0.9;
    }

    .qty-control {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 20px;
        font-size: 0.9rem;
    }

    .ticket-qty {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
        padding: 8px;
        border-radius: 8px;
        width: 60px;
    }

    .review-section {
        margin-top: 20px;
        padding-top: 15px;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .review-section h4 {
        font-size: 1rem;
        margin-bottom: 10px;
        color: #b3b3b3;
    }

    .btn-review {
        width: 100%;
        padding: 8px;
        background: transparent;
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: white;
        border-radius: 8px;
        font-size: 0.8rem;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 10px;
    }

    .btn-review:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: white;
    }

    .btn-select-seats {
        width: 100%;
        padding: 12px;
        background: transparent;
        border: 2px solid var(--primary);
        color: white;
        border-radius: 12px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-select-seats:hover {
        background: rgba(229, 9, 20, 0.2);
    }

    /* Modal Styles */
    .modal {
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.9);
        backdrop-filter: blur(5px);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .modal-content {
        background: linear-gradient(135deg, rgba(20, 20, 30, 0.95), rgba(10, 10, 15, 0.95));
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        width: 90%;
        max-width: 800px;
        max-height: 90vh;
        overflow-y: auto;
    }

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 25px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .modal-header h2 {
        margin: 0;
        font-size: 1.5rem;
    }

    .close-modal {
        font-size: 2rem;
        cursor: pointer;
        color: #888;
        transition: color 0.3s;
    }

    .close-modal:hover {
        color: var(--primary);
    }

    .modal-body {
        padding: 30px;
    }

    .screen {
        background: linear-gradient(to bottom, rgba(255,255,255,0.2), transparent);
        text-align: center;
        padding: 15px;
        margin-bottom: 40px;
        border-radius: 10px 10px 50% 50%;
        color: #666;
        font-weight: bold;
        letter-spacing: 3px;
    }

    .seat-map {
        display: grid;
        grid-template-columns: repeat(10, 1fr);
        gap: 10px;
        margin: 30px 0;
        justify-content: center;
    }

    .seat {
        width: 40px;
        height: 40px;
        border-radius: 8px 8px 2px 2px;
        border: 2px solid rgba(255, 255, 255, 0.2);
        display: inline-block;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
    }

    .seat.available {
        background: rgba(100, 200, 100, 0.3);
        border-color: rgba(100, 200, 100, 0.6);
    }

    .seat.available:hover {
        background: rgba(100, 200, 100, 0.5);
        transform: scale(1.1);
    }

    .seat.selected {
        background: var(--primary);
        border-color: var(--primary);
        box-shadow: 0 0 15px rgba(229, 9, 20, 0.5);
    }

    .seat.booked {
        background: rgba(100, 100, 100, 0.4);
        border-color: rgba(150, 150, 150, 0.4);
        cursor: not-allowed;
    }

    .seat-legend {
        display: flex;
        justify-content: center;
        gap: 30px;
        margin: 30px 0;
        font-size: 0.9rem;
    }

    .seat-legend div {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .selection-summary {
        background: rgba(255, 255, 255, 0.05);
        padding: 20px;
        border-radius: 12px;
        text-align: center;
        margin-top: 20px;
    }

    .selection-summary p {
        margin: 10px 0;
        font-size: 1.1rem;
    }

    .modal-footer {
        display: flex;
        justify-content: flex-end;
        gap: 15px;
        padding: 25px;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .btn-secondary {
        padding: 12px 30px;
        background: transparent;
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: white;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-secondary:hover {
        background: rgba(255, 255, 255, 0.1);
    }

    .btn-primary {
        padding: 12px 30px;
        background: var(--primary);
        border: none;
        color: white;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        opacity: 0.9;
    }
</style>

@section Scripts {
    <script src="~/js/seat-selection.js"></script>
}
