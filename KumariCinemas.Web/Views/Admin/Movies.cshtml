@model IEnumerable<KumariCinemas.Web.Models.Movie>

@{
    ViewData["Title"] = "Manage Movies";
}

<div class="admin-container">
    <header class="admin-header">
        <h1>üé¨ Manage Movies</h1>
        <a asp-action="AddMovie" class="btn-add">+ Add New Movie</a>
    </header>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="movies-table">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Genre</th>
                    <th>Language</th>
                    <th>Release Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr>
                        <td>@movie.MovieId</td>
                        <td>@movie.Title</td>
                        <td>@movie.Genre</td>
                        <td>@movie.Language</td>
                        <td>@movie.ReleaseDate.ToString("MMM dd, yyyy")</td>
                        <td>
                            <a asp-action="EditMovie" asp-route-id="@movie.MovieId" class="btn-edit">Edit</a>
                            <form asp-action="DeleteMovie" method="post" style="display:inline;" 
                                  onsubmit="return confirm('Are you sure you want to delete this movie?');">
                                <input type="hidden" name="movieId" value="@movie.MovieId" />
                                <button type="submit" class="btn-delete">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="admin-nav">
        <a asp-action="Index" class="admin-btn secondary">‚Üê Back to Dashboard</a>
    </div>
</div>

<style>
    .admin-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .admin-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .btn-add {
        background: #2ecc71;
        color: white;
        padding: 12px 24px;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 600;
    }

    .alert-success, .alert-danger {
        padding: 15px;
        border-radius: 10px;
        margin-bottom: 20px;
    }
    
    .alert-success {
        background: rgba(46, 204, 113, 0.2);
        border: 1px solid #2ecc71;
        color: #2ecc71;
    }
    
    .alert-danger {
        background: rgba(231, 76, 60, 0.2);
        border: 1px solid #e74c3c;
        color: #e74c3c;
    }

    .movies-table {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 16px;
        overflow: hidden;
        margin-bottom: 30px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    th {
        background: rgba(0, 0, 0, 0.3);
        color: #888;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.8rem;
    }

    tr:hover {
        background: rgba(255, 255, 255, 0.03);
    }

    .btn-edit, .btn-delete {
        padding: 6px 12px;
        border-radius: 6px;
        margin-right: 8px;
        cursor: pointer;
        border: none;
        font-size: 0.85rem;
        text-decoration: none;
        display: inline-block;
    }

    .btn-edit {
        background: #3498db;
        color: white;
    }

    .btn-delete {
        background: #e74c3c;
        color: white;
    }

    .btn-edit:hover, .btn-delete:hover {
        opacity: 0.8;
    }

    .admin-nav {
        text-align: center;
    }

    .admin-btn {
        padding: 12px 24px;
        background: #e50914;
        color: white;
        text-decoration: none;
        border-radius: 10px;
        font-weight: 600;
    }

    .admin-btn.secondary {
        background: transparent;
        border: 2px solid rgba(255, 255, 255, 0.3);
    }
</style>
