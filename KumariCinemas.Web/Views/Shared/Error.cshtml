@model KumariCinemas.Web.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="glass-card" style="text-align: center; margin-top: 50px; border-color: #ff4444;">
    <h1 class="text-danger" style="font-size: 3rem; margin-bottom: 20px;">Oops!</h1>
    <h2 class="text-danger">An error occurred while processing your request.</h2>

    @if (Model != null && !string.IsNullOrEmpty(Model.RequestId))
    {
        <p style="margin-top: 20px; color: #aaa;">
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <p style="margin-top: 30px; font-size: 1.1rem;">
        Please try again later or contact support if the problem persists.
    </p>

    <div style="margin-top: 40px;">
        <a asp-controller="Home" asp-action="Index" class="btn-primary">Return Home</a>
    </div>
</div>
