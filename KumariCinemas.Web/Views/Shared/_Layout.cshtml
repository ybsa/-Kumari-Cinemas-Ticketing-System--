<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kumari Cinemas</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <nav>
            <div style="display: flex; align-items: center;">
                <a href="#" onclick="event.preventDefault(); window.history.back();" style="color: white; text-decoration: none; margin-right: 15px; font-size: 1.2rem; cursor: pointer;" title="Go Back">
                    &larr; Back
                </a>
                <div class="logo">
                    <a href="/" style="text-decoration: none; color: inherit;">Kumari Cinemas</a>
                </div>
            </div>
            <div>
                <a href="/Ticket" style="color: white; margin-right: 15px;">Movies</a>
                
                @if (User.Identity.IsAuthenticated)
                {
                    <span style="margin-right: 15px;">Hello, @User.Identity.Name</span>
                    <a href="/Ticket/MyBookings" style="color: white; margin-right: 15px;">My Bookings</a>
                    <a href="/Admin" style="color: #f1c40f; margin-right: 15px;">üîê Admin</a>
                    <a href="/User/Logout" style="color: white;">Logout</a>
                }
                else
                {
                    <a href="/User/Login" style="color: white; margin-right: 15px;">Login</a>
                    <a href="/User/Register" style="color: white;">Register</a>
                }
            </div>
        </nav>
        <main role="main">
            @RenderBody()
        </main>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
